<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"> <!-- Hình dạng oval (hình tròn nếu width=height) -->

    <solid android:color="#BDBDBD"/> <!-- Màu xám nhạt cho trạng thái tắt -->

    <size
        android:width="100dp"
        android:height="100dp"/> <!-- Kích thước gợi ý -->

    <stroke
        android:width="1dp"
        android:color="#757575"/> <!-- Viền màu xám đậm hơn (tùy chọn) -->

</shape>